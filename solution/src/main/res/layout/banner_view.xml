<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/all"
    android:layout_height="108dp"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/largeBannerContainer"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/large_banner">

        <ImageView
            android:id="@+id/largeBannerImage"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/largeBannerTitle"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginHorizontal="12dp"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:layout_marginTop="4dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/largeBannerDescription"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_marginHorizontal="32dp"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="#000000"
            android:textSize="8sp" />
    </LinearLayout>

    <Space
        android:id="@+id/spacer"
        android:layout_width="8dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/smallBannerContainer"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/small_banner"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/smallBannerImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/smallBannerRightLabel"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:ellipsize="end"
            android:gravity="end"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="6dp"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/smallBannerLeftLabel"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:ellipsize="end"
            android:layout_marginHorizontal="10dp"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:layout_marginTop="6dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
